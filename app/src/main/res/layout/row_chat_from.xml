<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="2dp"
        >

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_chat_date_header_background"
            android:id="@+id/txtDateFrom"
            android:text="Dec 10, 2019"
            android:textSize="11sp"
            android:fontFamily="@font/open_sans_bold"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:visibility="gone"/> <!-- TODO: set this value-->

    </LinearLayout>

    <!--
        // Right side alignment attribute
        android:layout_alignParentRight="true"
    -->
    <androidx.cardview.widget.CardView
        android:layout_marginRight="50dp"
        android:layout_below="@+id/txtDateFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#3F51B5"
        app:cardCornerRadius="10dp"
        app:contentPadding="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading.."
                android:textSize="14sp"
                android:fontFamily="@font/open_sans"
                android:textColor="@android:color/white"
                android:id="@+id/textViewFromRow"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00 pm"
                android:id="@+id/timeFrom"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:layout_gravity="start"
                android:fontFamily="@font/open_sans_bold"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>