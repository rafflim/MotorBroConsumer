<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#364f6b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_marginLeft="0dp"
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="start"
            >

            <ImageView
                android:layout_marginTop="25dp"

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="start"
                android:layout_marginRight="20dp"
                android:src="@drawable/white_back_icon"
                android:tint="#FFFFFF" />

        </LinearLayout>


        <TextView
            android:id="@+id/dashboardLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/lato"
            android:text="Add Parts and Services"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_marginLeft="23dp"
            />



        <LinearLayout
            android:id="@+id/checkMarkButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="right"
            >

            <ImageView
                android:layout_marginTop="15dp"

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/check_mark_icon"
                android:tint="#4CAF50" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="11sp"
                android:textColor="#4CAF50"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/deleteLayout"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_marginRight="2dp"
            android:visibility="visible"
            >

            <ImageView
                android:layout_width="34dp"

                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="11sp"
                android:tint="#DD4C4C"
                app:srcCompat="@drawable/trash_icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="11sp"
                android:textColor="#DD4C4C"
                />

        </LinearLayout>



    </androidx.appcompat.widget.Toolbar>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:paddingBottom="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            >

            <LinearLayout
                android:id="@+id/adsLayoutAddParts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                >
                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ads_image_gpc"
                    />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:fontFamily="@font/open_sans"

                android:text="by km"
                android:textSize="9sp"
                android:textColor="#293C52"
                android:visibility="gone"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/open_sans"

                android:text="Date"
                android:textSize="13sp"
                android:textColor="#293C52"
                android:visibility="gone"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="gone"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tint="#364f6b"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/calendar_small_icon"

                    />

                <EditText
                    android:id="@+id/dateText"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/open_sans"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:text=""
                    android:inputType="datetime"
                    android:focusable="false"
                    android:scrollbars = "vertical"
                    />

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/imgMainProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="50dp"
                app:cardBackgroundColor="#EEEEEE"
                android:layout_marginTop="50dp"
                app:cardElevation="3dp"
                android:layout_gravity="center"

                >



                <ImageView
                    android:id="@+id/mainProfilePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"    />

                <ImageView
                    android:id="@+id/emptyImageIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/camera_compact_icon"
                    android:tint="#364f6b"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:padding="25dp"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/open_sans_bold"
                android:text="Add Photo"
                android:textColor="@color/textColorBlack"
                android:textSize="15sp"

                android:textAlignment="center"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="(Optional)"
                android:textColor="@color/textColorBlack"
                android:textSize="12sp"

                android:textAlignment="center"
                android:layout_marginRight="20dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Type of parts or services"
                android:textSize="15sp"
                android:textColor="#293C52"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:tint="#364f6b"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/wrenchicon"

                    />

                <EditText
                    android:id="@+id/typeOfPartsText"
                    android:layout_width="0dp"
                    android:minHeight="43dp"
                    android:maxHeight="200dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/open_sans"

                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Brand"
                android:textSize="15sp"
                android:textColor="#293C52"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"

                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:tint="#364f6b"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/brand_icon"

                    />

                <EditText
                    android:id="@+id/brandText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="@font/open_sans"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:text=""
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:focusable="false"
                    />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Price"
                android:textSize="15sp"
                android:textColor="#293C52"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"

                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:tint="#364f6b"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/cash_wallet_icon"

                    />

                <EditText
                    android:id="@+id/priceText"
                    android:layout_width="0dp"
                    android:layout_height="43dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/open_sans"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:text=""
                    android:inputType="numberDecimal"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"

                    />



            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/open_sans"
                android:text="Bike"
                android:textSize="13sp"
                android:textColor="#293C52"
                android:visibility="gone"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone"
                >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"

                    android:layout_marginLeft="20dp"
                    android:src="@drawable/motorcycle"
                    android:tint="#293C52"

                    />

                <EditText
                    android:id="@+id/bikeText"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:text=""
                    android:inputType="number"
                    android:textSize="13sp"
                    android:focusable="false"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:fontFamily="@font/open_sans"
                android:text="by ₱"
                android:textSize="11sp"
                android:textColor="#293C52"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/open_sans"
                android:text="Odometer"
                android:textSize="13sp"
                android:textColor="#293C52"
                android:visibility="visible"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:visibility="visible"

                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tint="#364f6b"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/odometer_fixed_icon"

                    />

                <EditText
                    android:id="@+id/odometerText"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/open_sans"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:scrollbars = "vertical"
                    />



            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/open_sans"
                android:text="Note"
                android:textSize="13sp"
                android:textColor="#293C52"
                android:visibility="visible"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="visible"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:layout_marginLeft="20dp"
                    android:src="@drawable/note_fixed_icon"
                    android:tint="#364f6b"
                    />

                <EditText
                    android:id="@+id/noteText"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/open_sans"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:text=""
                    android:inputType="text"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"

                    />



            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>