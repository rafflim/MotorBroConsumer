<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F7F7"
        android:paddingBottom="100dp"
        android:paddingTop="0dp"
        >

        <RelativeLayout
            android:id="@+id/topNegativeLayout"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="-60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topImageLayout"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            app:layout_constraintTop_toTopOf="@id/topNegativeLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            >



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/main_background_motor"
                android:scaleType="centerCrop"
                />

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Welcome to MotorBro"-->
<!--                android:textColor="@color/white"-->
<!--                android:layout_marginTop="70dp"-->
<!--                android:fontFamily="@font/open_sans_bold"-->
<!--                android:textSize="21sp"-->
<!--                app:layout_constraintTop_toTopOf="parent"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent"/>-->

        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/linearLayoutTop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/topImageLayout"
            app:layout_constraintStart_toStartOf="@+id/topImageLayout"
            app:layout_constraintEnd_toEndOf="@id/topImageLayout"

            android:layout_marginTop="-40dp"
            android:layout_marginRight="-60dp"
            android:layout_marginLeft="20dp"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/motorcycleLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/linearLayoutTop"
            app:layout_constraintStart_toStartOf="@id/linearLayoutTop"
            app:layout_constraintEnd_toEndOf="@id/linearLayoutTop"

            android:background="@drawable/shadow_background"
            android:paddingBottom="20dp"
            >


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="80dp"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/motorcycleImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/no_data" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/primaryBikeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Primary Bike"
                android:textColor="#1C1C1C"
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/motorNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/open_sans"
                android:text="No Bike"
                android:textColor="#3C3C3C"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/primaryBikeName" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/plateNumberLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/motorNameText"
                app:layout_constraintStart_toStartOf="@id/motorNameText"
                android:padding="7dp"
                android:background="@drawable/plate_number_background"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/plateNumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text=""
                    android:textColor="@color/textColorBlack"
                    android:textSize="13sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"

                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:visibility="gone"
                android:id="@+id/changePrimaryBike"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginRight="80dp"
                android:background="@drawable/set_as_primary"
                android:elevation="10dp"
                android:paddingStart="10dp"
                android:paddingTop="0dp"
                android:paddingEnd="10dp"
                android:scaleType="centerCrop"
                android:text="Change Primary Bike"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView4" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:id="@+id/generalInformationLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/motorcycleLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingBottom="15dp"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shadow_background"
            >



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/odometerLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"

                >

                <ImageView
                    android:id="@+id/odometerImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/freight_circle_icon"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginLeft="10dp"/>

<!--                <androidx.cardview.widget.CardView-->
<!--                    android:id="@+id/odometerImage"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    app:cardCornerRadius="15dp"-->
<!--                    app:cardPreventCornerOverlap="false"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
<!--                    app:layout_constraintTop_toTopOf="parent"-->
<!--                    app:layout_constraintBottom_toBottomOf="parent"-->
<!--                    android:layout_marginLeft="10dp"-->
<!--                    >-->

<!--                    <ImageView-->

<!--                        android:layout_width="50dp"-->
<!--                        android:layout_height="50dp"-->
<!--                        android:src="@drawable/freight_circle_icon"-->
<!--                        android:scaleType="centerCrop"/>-->
<!--                </androidx.cardview.widget.CardView>-->




                <TextView
                    android:id="@+id/odometerStatementText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintStart_toEndOf="@id/odometerImage"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textAlignment="viewStart"
                    android:fontFamily="@font/open_sans"
                    android:text="Odometer has not been updated yet."
                    android:textColor="@color/textColorBlack"
                    android:textSize="15sp"
                    />

<!--                <TextView-->
<!--                    android:id="@+id/odometerText"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginLeft="10dp"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintTop_toTopOf="parent"-->
<!--                    app:layout_constraintBottom_toBottomOf="parent"-->
<!--                    android:fontFamily="@font/montserrat_bold"-->
<!--                    android:text="20km"-->
<!--                    android:textColor="@color/textColorBlack"-->
<!--                    android:textSize="16sp"-->
<!--                    android:layout_marginRight="5dp"-->
<!--                    />-->




            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/updateOdometerLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/odometerLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/create_account_button_background"
                android:padding="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="Update"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/odometerImage"
                    app:layout_constraintTop_toTopOf="parent" />


            </LinearLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/historyLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/generalInformationLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:visibility="gone"
            android:background="@drawable/shadow_background"
            android:paddingBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            >


            <TextView
                android:id="@+id/historyNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_bold"
                android:text="History"
                android:textColor="@color/textColorBlack"
                android:textSize="21sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/historyLastLayout"
                android:layout_width="0dp"
                android:layout_height="130dp"
                app:layout_constraintTop_toBottomOf="@id/historyNameText"
                app:layout_constraintStart_toStartOf="@id/historyNameText"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"

                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                >

                <ImageView
                    android:id="@+id/historyImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/location_icon"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintStart_toEndOf="@id/historyImage"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Achieved fuel full tank 5 times!"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/textColorBlack"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/historyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:fontFamily="@font/montserrat"
                    android:text="Nov 1, 2019"
                    android:textColor="#919191"
                    android:textSize="15sp"
                    android:layout_marginRight="5dp"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/adsLayout"
            android:layout_width="0dp"
            android:layout_height="380dp"
            app:layout_constraintTop_toBottomOf="@id/historyLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shadow_background"
                android:layout_weight="2"
                android:id="@+id/adsLayout1"

                >
                
                <ImageView
                    android:id="@+id/motorAds1"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:src="@drawable/ads_samurai"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <TextView
                    android:id="@+id/poshAdsTitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAMURAI PAINT"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/textColorBlack"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/motorAds1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"

                    />

                <TextView
                    android:id="@+id/poshAdsBody1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Samurai is the first brand of spray specifically designed for the motorcycle market. "
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/textColorBlack"
                    android:textSize="13sp"
                    app:layout_constraintTop_toBottomOf="@id/poshAdsTitle1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"

                    />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"


                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shadow_background"
                android:layout_weight="2"
                android:id="@+id/adsLayout2"

                >

                <ImageView
                    android:id="@+id/motorAds2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/ads_owens"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <TextView
                    android:id="@+id/poshAdsTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OWENS"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/textColorBlack"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/motorAds2"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"

                    />

                <TextView
                    android:id="@+id/poshAdsBody2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Owens is the go-to brand for high quality motorcycle front and rear shock absorbers. "
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/textColorBlack"
                    android:textSize="13sp"
                    app:layout_constraintTop_toBottomOf="@id/poshAdsTitle2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"

                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/qrCodeLayout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@id/adsLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shadow_background"
            >

            <ImageView
                android:id="@+id/qrCodeImage"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:id="@+id/qrCodeSample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/qrCodeImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="This is your personal QR Code that can be scanned by accredited MotorBro merchants."
                android:fontFamily="@font/open_sans"
                android:textColor="@color/textColorBlack"
                android:textSize="13sp"
                android:layout_marginTop="20dp"
                />





        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</FrameLayout>