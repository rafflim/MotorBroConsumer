<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.elevintech.motorbro.BikeRegistration.BikeRegistrationActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#3C7BCF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/createAccountBackImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/white_back_icon"
            android:tint="@color/white"
            />


    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/lato"
        android:text="Bike Registration"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="@+id/toolbar" />
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#F0F0F0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="40dp">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/lato"
                android:text="Bike Image"
                android:textColor="#5C7CD6"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/scrollView2"
                app:layout_constraintEnd_toEndOf="@+id/toolbar"
                app:layout_constraintStart_toStartOf="@+id/toolbar" />


            <androidx.cardview.widget.CardView
                android:id="@+id/imgMainProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="50dp"
                app:cardBackgroundColor="#EEEEEE"
                android:layout_marginTop="50dp"
                app:cardElevation="3dp"
                android:layout_gravity="center"

                >



                <ImageView
                    android:id="@+id/mainProfilePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"    />

                <ImageView
                    android:id="@+id/emptyImageIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/camera_compact_icon"
                    android:tint="#4F6B91"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:padding="30dp"/>
            </androidx.cardview.widget.CardView>



                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="16dp"
                                android:text="Motor General Information"
                                android:textColor="#5C7CD6"
                                android:textSize="19sp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageView" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="Brand"
                                android:layout_marginLeft="20dp"
                                android:textSize="15sp"

                                android:fontFamily="@font/open_sans_bold"
                                android:textColor="@color/textColorBlack"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="@+id/textView"
                                app:layout_constraintTop_toBottomOf="@+id/textView" />

                            <EditText

                                android:id="@+id/editBrandText"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:layout_marginLeft="20dp"
                                android:textSize="14sp"
                                android:fontFamily="@font/open_sans"
                                android:maxLength="50"
                                 />





                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="Model"
                                android:fontFamily="@font/open_sans_bold"
                                android:textColor="@color/textColorBlack"
                                android:textStyle="bold"
                                android:layout_marginLeft="20dp" />

                            <EditText

                                android:id="@+id/editModelText"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:ems="10"
                                android:textSize="14sp"
                                android:fontFamily="@font/open_sans"
                                android:maxLength="50"
                                android:inputType="textPersonName"
                                app:layout_constraintBottom_toBottomOf="@+id/textView7"
                                app:layout_constraintStart_toEndOf="@+id/textView7"
                                app:layout_constraintTop_toTopOf="@+id/textView7" />





                            <TextView
                                android:id="@+id/textView14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="Vital Info"
                                android:textColor="#5C7CD6"
                                android:textSize="19sp"
                                android:textStyle="bold"
                                android:layout_marginLeft="20dp"
                                app:layout_constraintStart_toStartOf="@+id/textView7"
                                app:layout_constraintTop_toBottomOf="@+id/textView7" />

                            <TextView
                                android:id="@+id/textView15"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="Plate #"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="@font/open_sans_bold"
                                android:textColor="@color/textColorBlack"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="@+id/textView14"
                                app:layout_constraintTop_toBottomOf="@+id/textView14" />

                             <EditText
                                android:id="@+id/editPlateNumberText"
                                 android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:ems="10"
                                android:inputType="textPersonName"

                                 android:textSize="14sp"
                                 android:fontFamily="@font/open_sans"
                                 android:maxLength="50"
                                app:layout_constraintBottom_toBottomOf="@+id/textView15"
                                app:layout_constraintStart_toEndOf="@+id/textView15"
                                app:layout_constraintTop_toTopOf="@+id/textView15" />

                            <TextView
                                android:id="@+id/textView16"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="Odometer"
                                android:textColor="@color/textColorBlack"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="@font/open_sans_bold"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="@+id/textView15"
                                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <EditText
                android:id="@+id/editOdometerText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:ems="10"
                android:inputType="textPersonName"

                android:textSize="14sp"
                android:fontFamily="@font/open_sans"
                android:maxLength="50"
                app:layout_constraintBottom_toBottomOf="@+id/textView16"
                app:layout_constraintStart_toEndOf="@+id/textView16"
                app:layout_constraintTop_toTopOf="@+id/textView16" />

                            <TextView
                                android:id="@+id/textView17"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="Nickname"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="@font/open_sans_bold"
                                android:textColor="@color/textColorBlack"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="@+id/textView7"
                                app:layout_constraintTop_toBottomOf="@+id/textView16" />

            <EditText
                android:id="@+id/editNicknameText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="14sp"
                android:fontFamily="@font/open_sans"
                android:maxLength="50"
                app:layout_constraintBottom_toBottomOf="@+id/textView17"
                app:layout_constraintStart_toEndOf="@+id/textView17"
                app:layout_constraintTop_toTopOf="@+id/textView17" />

                            <TextView
                                android:id="@+id/yearBoughtText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="Year Acquired"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="@font/open_sans_bold"
                                android:textColor="@color/textColorBlack"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="@+id/textView7"
                                app:layout_constraintTop_toBottomOf="@+id/textView17" />








                            <EditText
                                android:id="@+id/yearBoughtEditText"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:textSize="14sp"
                                android:fontFamily="@font/open_sans"
                                android:maxLength="50"
                                app:layout_constraintBottom_toBottomOf="@+id/yearBoughtText"
                                app:layout_constraintStart_toEndOf="@+id/yearBoughtText"
                                app:layout_constraintTop_toTopOf="@+id/yearBoughtText" />

                            <Button
                                android:id="@+id/sendButton"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginStart="30dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="30dp"
                                android:background="@drawable/create_account_button_background"
                                android:text="Confirm"
                                android:textColor="#fff"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/yearBoughtText" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>