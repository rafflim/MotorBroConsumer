<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/forgot_password_icon"
        android:layout_marginTop="10dp"
        android:contentDescription="Forgot password?" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your email. If your email is in our database we will send you an email to reset your password."
        android:textSize="14sp"
        android:layout_margin="20dp"
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="@color/textColorBlack"
        />

    <EditText
        android:id="@+id/emailEditDialogText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:maxLength="100"
        />


</LinearLayout>